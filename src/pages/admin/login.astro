---
import BaseLayout from "../../layouts/BaseLayout.astro";
export const prerender = false;

// If already logged in, redirect to dashboard
const { cookies, redirect } = Astro;

const accessToken = cookies.get("sb-access-token");
const refreshToken = cookies.get("sb-refresh-token");

if (accessToken && refreshToken) {
    return redirect("/admin");
}
---

<BaseLayout title="Admin Login" description="Sign in to manage properties">
    <div
        class="min-h-screen bg-navy-darker flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8"
    >
        <div
            class="max-w-md w-full space-y-8 bg-navy-dark p-8 rounded-2xl border border-gold/20 shadow-xl"
        >
            <div>
                <h2 class="mt-6 text-center text-3xl font-extrabold text-white">
                    Admin CMS Login
                </h2>
                <p class="mt-2 text-center text-sm text-cream/60">
                    Sign in to manage your property listings
                </p>
            </div>

            <form class="mt-8 space-y-6" id="login-form">
                <div class="rounded-md shadow-sm -space-y-px">
                    <div class="mb-4">
                        <label for="email" class="sr-only">Email address</label>
                        <input
                            id="email"
                            name="email"
                            type="email"
                            required
                            class="appearance-none rounded-lg relative block w-full px-3 py-3 border border-gold/30 placeholder-gray-500 text-navy-dark focus:outline-none focus:ring-gold focus:border-gold focus:z-10 sm:text-sm bg-chrome-100"
                            placeholder="Email address"
                        />
                    </div>
                    <div>
                        <label for="password" class="sr-only">Password</label>
                        <input
                            id="password"
                            name="password"
                            type="password"
                            required
                            class="appearance-none rounded-lg relative block w-full px-3 py-3 border border-gold/30 placeholder-gray-500 text-navy-dark focus:outline-none focus:ring-gold focus:border-gold focus:z-10 sm:text-sm"
                            placeholder="Password"
                        />
                    </div>
                </div>

                <div>
                    <button
                        type="submit"
                        class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-xl text-navy-dark bg-gold hover:bg-gold-light focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gold transition-colors"
                    >
                        <span
                            class="absolute left-0 inset-y-0 flex items-center pl-3"
                        >
                            <svg
                                class="h-5 w-5 text-navy-dark group-hover:text-navy"
                                xmlns="http://www.w3.org/2000/svg"
                                viewBox="0 0 20 20"
                                fill="currentColor"
                                aria-hidden="true"
                            >
                                <path
                                    fill-rule="evenodd"
                                    d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z"
                                    clip-rule="evenodd"></path>
                            </svg>
                        </span>
                        Sign in
                    </button>
                </div>

                <div id="message" class="text-center text-sm font-medium h-5">
                </div>

                <!-- Temporary Registration Help -->
                <div class="text-center text-xs text-cream/30 mt-4">
                    Need to register? <button
                        type="button"
                        id="toggle-mode"
                        class="text-gold hover:underline"
                        >Switch to Sign Up</button
                    >
                </div>
            </form>
        </div>
    </div>
</BaseLayout>

<script>
    import { supabase } from "../../lib/supabaseClient";

    const form = document.querySelector("#login-form") as HTMLFormElement;
    const messageEl = document.querySelector("#message") as HTMLElement;
    const toggleBtn = document.querySelector(
        "#toggle-mode",
    ) as HTMLButtonElement;
    const submitBtn = form.querySelector(
        'button[type="submit"]',
    ) as HTMLButtonElement;

    let isLogin = true;

    toggleBtn.addEventListener("click", () => {
        isLogin = !isLogin;
        toggleBtn.textContent = isLogin
            ? "Switch to Sign Up"
            : "Switch to Login";
        submitBtn.textContent = isLogin ? "Sign in" : "Create Account";
        submitBtn.querySelector("span")?.remove(); // Remove icon for simplicity on toggle
    });

    form.addEventListener("submit", async (e) => {
        e.preventDefault();
        const formData = new FormData(form);
        const email = formData.get("email") as string;
        const password = formData.get("password") as string;

        messageEl.textContent = "Processing...";
        messageEl.className = "text-center text-sm font-medium text-gold";

        try {
            if (isLogin) {
                const { data, error } = await supabase.auth.signInWithPassword({
                    email,
                    password,
                });

                if (error) throw error;

                // Set cookies for server-side auth checking
                document.cookie = `sb-access-token=${data.session.access_token}; path=/; max-age=${60 * 60 * 24 * 7}`;
                document.cookie = `sb-refresh-token=${data.session.refresh_token}; path=/; max-age=${60 * 60 * 24 * 7}`;

                window.location.href = "/admin";
            } else {
                const { data, error } = await supabase.auth.signUp({
                    email,
                    password,
                });

                if (error) throw error;

                if (data.user && !data.session) {
                    messageEl.textContent =
                        "Check your email for the confirmation link!";
                    messageEl.className =
                        "text-center text-sm font-medium text-green-500";
                } else {
                    // Auto login if confirm is disabled
                    document.cookie = `sb-access-token=${data.session?.access_token}; path=/; max-age=${60 * 60 * 24 * 7}`;
                    document.cookie = `sb-refresh-token=${data.session?.refresh_token}; path=/; max-age=${60 * 60 * 24 * 7}`;
                    window.location.href = "/admin";
                }
            }
        } catch (error: any) {
            messageEl.textContent = error.message;
            messageEl.className =
                "text-center text-sm font-medium text-red-500";
        }
    });
</script>
