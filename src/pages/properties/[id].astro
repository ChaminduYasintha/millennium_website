---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { supabase, type Property } from '../../lib/supabaseClient';

export const prerender = false;

const { id } = Astro.params;

let displayProperty: Property | null = null;

if (id) {
  const { data, error } = await supabase
    .from('properties')
    .select('*')
    .eq('id', id)
    .single();
    
    if (data) {
        displayProperty = data;
    } else {
        console.error("Error fetching property or property not found:", error);
        Astro.response.status = 404;
    }
} else {
    Astro.response.status = 404;
}

const title = displayProperty ? `${displayProperty.title} in ${displayProperty.location}` : 'Property Details';
const description = displayProperty ? displayProperty.description : 'View details for this premium property.';
---

<BaseLayout title={title} description={description}>
  <Navigation />

  {displayProperty ? (
    <div class="bg-navy-darker min-h-screen pb-20">
      
      <!-- Hero Image Section -->
      <section class="relative min-h-[85vh] md:min-h-[70vh] md:h-[70vh] bg-navy-dark overflow-hidden flex flex-col justify-end">
        {displayProperty.images && displayProperty.images.length > 0 ? (
          <img 
            src={displayProperty.images[0]} 
            alt={displayProperty.title}
            class="absolute inset-0 w-full h-full object-cover"
            onerror="this.onerror=null; this.src='https://via.placeholder.com/800x600?text=No+Hero+Image';"
          />
        ) : (
          <div class="absolute inset-0 w-full h-full flex items-center justify-center bg-navy-light text-gold/30">
            <svg class="w-32 h-32" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"/>
            </svg>
          </div>
        )}
        <div class="absolute inset-0 bg-gradient-to-t from-navy-darker via-navy-darker/60 to-transparent"></div>
        
        <!-- Bottom Content Container -->
        <div class="relative z-10 p-6 md:p-12 w-full">
          <div class="container mx-auto px-4 sm:px-6 lg:px-8">
            <a href="/properties" class="inline-flex items-center text-gold hover:text-white mb-6 transition-colors bg-navy-dark/50 backdrop-blur px-4 py-2 rounded-lg border border-gold/20">
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
              </svg>
              Back to Properties
            </a>
            
            <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
              <div class="flex-1">
                <span class="inline-block px-4 py-1 bg-gold text-navy-dark font-bold rounded-full mb-4">
                  {displayProperty.location}
                </span>
                <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-2 shadow-sm leading-tight">
                  {displayProperty.title}
                </h1>
                <p class="text-lg sm:text-xl text-cream/90 flex items-center flex-wrap gap-2">
                   <span class="flex items-center">
                       <svg class="w-5 h-5 mr-2 text-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                       </svg>
                       {displayProperty.landmark ? `Near ${displayProperty.landmark}` : displayProperty.distance_to_kandy}
                   </span>
                </p>
              </div>
              
              <div class="bg-navy-light/90 backdrop-blur-md p-6 rounded-2xl border border-gold/30 shadow-xl w-full md:w-auto md:min-w-[300px]">
                <p class="text-cream/60 text-sm mb-1">Total Price (Estimated)</p>
                <div class="text-3xl font-bold text-gold mb-1">
                  Rs. {(displayProperty.perch_price * displayProperty.total_perches).toLocaleString()}
                </div>
                <p class="text-white text-lg">
                  {displayProperty.total_perches} Perches <span class="text-cream/40">|</span> Rs. {displayProperty.perch_price.toLocaleString()}/pp
                </p>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Content Grid -->
      <section class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 -mt-8 relative z-10">
        <div class="grid lg:grid-cols-3 gap-12">
          
          <!-- Left Column: Details -->
          <div class="lg:col-span-2 space-y-12">
             
             <!-- Overview Card -->
             <div class="bg-navy-light/50 backdrop-blur-sm p-8 rounded-2xl border border-gold/10">
                <h2 class="text-2xl font-bold text-white mb-6">Property Overview</h2>
                <p class="text-lg text-cream/80 leading-relaxed whitespace-pre-line mb-8">
                  {displayProperty.description}
                </p>

                {/* Image Gallery */}
                {displayProperty.images && displayProperty.images.length > 0 && (
                  <div>
                    <h3 class="text-xl font-bold text-gold mb-4">Property Gallery</h3>
                    <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
                      {displayProperty.images.map((image, index) => (
                        <div class="group relative aspect-square overflow-hidden rounded-xl border border-gold/10 bg-navy-dark">
                          <img 
                            src={image} 
                            alt={`Gallery image ${index + 1}`}
                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                            onerror="this.onerror=null; this.src='https://via.placeholder.com/400?text=No+Image';"
                          />
                          <div class="absolute inset-0 bg-navy-dark/0 group-hover:bg-navy-dark/20 transition-colors"></div>
                        </div>
                      ))}
                    </div>
                  </div>
                )}
             </div>
             
             <!-- Features -->
             <div>
               <h3 class="text-2xl font-bold text-white mb-6">Utilities & Features</h3>
               <div class="grid sm:grid-cols-3 gap-4">
                  <div class={`p-6 rounded-xl border ${displayProperty.has_water ? 'bg-navy-light border-gold/30' : 'bg-navy-dark border-gray-700 opacity-50'}`}>
                    <div class="w-12 h-12 bg-blue-500/10 rounded-lg flex items-center justify-center mb-4">
                      <span class="text-2xl">üíß</span>
                    </div>
                    <h4 class="text-white font-semibold">Water Supply</h4>
                    <p class="text-sm text-cream/60">{displayProperty.has_water ? 'Available' : 'Not specified'}</p>
                  </div>
                  
                  <div class={`p-6 rounded-xl border ${displayProperty.has_electricity ? 'bg-navy-light border-gold/30' : 'bg-navy-dark border-gray-700 opacity-50'}`}>
                    <div class="w-12 h-12 bg-yellow-500/10 rounded-lg flex items-center justify-center mb-4">
                       <span class="text-2xl">‚ö°</span>
                    </div>
                    <h4 class="text-white font-semibold">Electricity</h4>
                    <p class="text-sm text-cream/60">{displayProperty.has_electricity ? 'Available' : 'Not specified'}</p>
                  </div>
                  
                  <div class={`p-6 rounded-xl border ${displayProperty.has_telephone ? 'bg-navy-light border-gold/30' : 'bg-navy-dark border-gray-700 opacity-50'}`}>
                    <div class="w-12 h-12 bg-green-500/10 rounded-lg flex items-center justify-center mb-4">
                       <span class="text-2xl">üìû</span>
                    </div>
                    <h4 class="text-white font-semibold">Telephone</h4>
                    <p class="text-sm text-cream/60">{displayProperty.has_telephone ? 'Available' : 'Not specified'}</p>
                  </div>
               </div>
             </div>
             
             <!-- Location Details -->
             <div class="bg-navy-dark p-8 rounded-2xl border border-gray-800">
               <h3 class="text-2xl font-bold text-white mb-6">Location Details</h3>
               <ul class="space-y-4 text-cream/80">
                  <li class="flex items-start">
                     <span class="text-gold mr-3">üìç</span> 
                     <span><strong>Location:</strong> {displayProperty.location}</span>
                  </li>
                  <li class="flex items-start">
                     <span class="text-gold mr-3">üöó</span> 
                     <span><strong>Distance to Kandy:</strong> {displayProperty.distance_to_kandy}</span>
                  </li>
                  {displayProperty.landmark && (
                  <li class="flex items-start">
                     <span class="text-gold mr-3">üèõÔ∏è</span> 
                     <span><strong>Nearby Landmark:</strong> {displayProperty.landmark}</span>
                  </li>
                  )}
               </ul>
             </div>
          </div>
          
          <!-- Right Column: Agent/Contact -->
          <div class="lg:col-span-1">
             <div class="sticky top-24 space-y-6">
                
                <!-- Agent Card -->
                <div class="bg-navy-dark p-6 rounded-2xl border border-gold/30 shadow-xl">
                   <div class="flex items-center space-x-4 mb-6">
                      <div class="w-16 h-16 bg-gold/20 rounded-full flex items-center justify-center text-2xl border-2 border-gold">
                         üë®‚Äçüíº
                      </div>
                      <div>
                         <p class="text-sm text-gold uppercase font-bold tracking-wider">Listing Agent</p>
                         <h3 class="text-xl font-bold text-white">{displayProperty.agent_name}</h3>
                      </div>
                   </div>
                   
                   <a 
                     href={`https://wa.me/${displayProperty.agent_phone.replace(/\+/g, '').replace(/\s/g, '')}?text=Hi, I am interested in the property: ${displayProperty.title}`}
                     target="_blank"
                     class="block w-full py-4 bg-green-600 hover:bg-green-500 text-white font-bold rounded-xl text-center mb-3 transition-colors flex items-center justify-center"
                   >
                     <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/></svg>
                     WhatsApp Agent
                   </a>
                   
                   <a 
                     href={`tel:${displayProperty.agent_phone.replace(/\s/g, '')}`}
                     class="block w-full py-4 bg-transparent border-2 border-gold text-gold hover:bg-gold hover:text-navy-dark font-bold rounded-xl text-center transition-colors mb-4"
                   >
                     Call {displayProperty.agent_phone}
                   </a>
                   
                   <p class="text-xs text-center text-cream/40">Reference ID: {displayProperty.id.split('-')[0]}</p>
                </div>
                
                <!-- Quick Summary -->
                <div class="bg-navy-light/30 p-6 rounded-2xl border border-white/5">
                   <h4 class="text-white font-bold mb-4">Investment Summary</h4>
                   <div class="space-y-3 text-sm">
                      <div class="flex justify-between">
                         <span class="text-cream/60">Perch Price:</span>
                         <span class="text-white font-mono">Rs. {displayProperty.perch_price.toLocaleString()}</span>
                      </div>
                      <div class="flex justify-between">
                         <span class="text-cream/60">Extent:</span>
                         <span class="text-white font-mono">{displayProperty.total_perches} Perches</span>
                      </div>
                      <div class="flex justify-between border-t border-white/10 pt-3 mt-3">
                         <span class="text-gold">Estimated Total:</span>
                         <span class="text-gold font-bold font-mono">Rs. {(displayProperty.perch_price * displayProperty.total_perches).toLocaleString()}</span>
                      </div>
                   </div>
                </div>
             </div>
          </div>
          
        </div>
      </section>
      
    </div>
  ) : (
    <div class="min-h-screen bg-navy-darker flex items-center justify-center">
        <div class="text-center">
            <h1 class="text-4xl text-white mb-4">Property Not Found</h1>
            <a href="/properties" class="text-gold hover:underline">Return to Property List</a>
        </div>
    </div>
  )}

  <Footer />
</BaseLayout>
