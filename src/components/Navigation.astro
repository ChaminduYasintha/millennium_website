---
const navLinks = [
    { name: "Home", href: "/" },
    { name: "Properties", href: "/properties" },
    { name: "Construction & Design", href: "/construction" },
    { name: "About Us", href: "/about" },
    { name: "Contact", href: "/contact" },
];
---

<nav
    class="fixed top-0 left-0 right-0 z-40 bg-navy-dark/95 backdrop-blur-md border-b border-gold/20 shadow-lg"
>
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <!-- Logo -->
            <a href="/" class="flex items-center space-x-3 group">
                <img
                    src="/logo.png"
                    alt="Millennium Property Developers"
                    class="h-16 w-auto transform group-hover:scale-105 transition-transform duration-300"
                />
            </a>

            <!-- Desktop Navigation -->
            <div class="hidden lg:flex items-center space-x-1">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class="px-4 py-2 text-sm font-medium text-cream hover:text-gold hover:bg-navy-light rounded-lg transition-all duration-300"
                        >
                            {link.name}
                        </a>
                    ))
                }
            </div>

            <!-- Call to Action -->
            <div class="hidden lg:flex items-center space-x-4">
                <a
                    href="tel:+94778778109"
                    class="flex items-center space-x-2 text-gold hover:text-gold-light transition-colors group"
                >
                    <svg
                        class="w-5 h-5"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                        ></path>
                    </svg>
                    <span class="text-sm font-semibold">0778 778 109</span>
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button
                id="mobile-menu-button"
                class="lg:hidden p-2 rounded-lg text-cream hover:bg-navy-light hover:text-gold transition-colors"
                aria-label="Toggle menu"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div
        id="mobile-menu"
        class="lg:hidden hidden border-t border-gold/20 bg-navy-dark/95 backdrop-blur-md"
    >
        <div class="px-4 py-6 space-y-3">
            {
                navLinks.map((link) => (
                    <a
                        href={link.href}
                        class="block px-4 py-3 text-base font-medium text-cream hover:text-gold hover:bg-navy-light rounded-lg transition-all duration-300"
                    >
                        {link.name}
                    </a>
                ))
            }
            <a
                href="tel:+94778778109"
                class="block px-4 py-3 text-base font-medium text-navy-dark bg-gold hover:bg-gold-light rounded-lg text-center transition-colors font-bold"
            >
                Call: 0778 778 109
            </a>
        </div>
    </div>
</nav>

<!-- Spacer to prevent content from hiding under fixed nav -->
<div class="h-20"></div>

<script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton?.addEventListener("click", () => {
        mobileMenu?.classList.toggle("hidden");
    });

    // Close mobile menu when clicking outside
    document.addEventListener("click", (event) => {
        const target = event.target as HTMLElement;
        if (
            !mobileMenuButton?.contains(target) &&
            !mobileMenu?.contains(target)
        ) {
            mobileMenu?.classList.add("hidden");
        }
    });
</script>

<style>
    nav {
        box-shadow: 0 4px 30px rgba(212, 175, 55, 0.1);
    }
</style>
