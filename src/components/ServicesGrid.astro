---
// Services Grid - Navy + Gold Premium Theme
const services = [
  {
    title: "Land Sales",
    description: "Premium land plots in Haragama, Katugastota, and Peradeniya with clear deeds and utilities.",
    icon: "land",
    link: "/properties",
    features: ["Clear Title Deeds", "Utility Access", "Prime Locations"]
  },
  {
    title: "Construction",
    description: "Complete construction services from foundation to finishing with high-quality materials.",
    icon: "construction",
    link: "/construction",
    features: ["Modern Designs", "Quality Materials", "Timely Delivery"]
  },
  {
    title: "Quantity Surveying",
    description: "Accurate cost estimation and project management for construction projects.",
    icon: "survey",
    link: "/construction#quantity-surveying",
    features: ["Cost Estimation", "Budget Planning", "Resource Management"]
  },
  {
    title: "2D/3D Drafting",
    description: "Professional architectural drawings and 3D visualizations for your dream home.",
    icon: "drafting",
    link: "/construction#drafting",
    features: ["2D Blueprints", "3D Walkthroughs", "Custom Designs"]
  },
  {
    title: "Bank Loan Coordination",
    description: "Assistance with securing bank loans and financial planning for your property.",
    icon: "bank",
    link: "/contact",
    features: ["Loan Processing", "Documentation", "Bank Liaison"]
  },
  {
    title: "Property Consultation",
    description: "Expert advice on property investment, legal matters, and market trends in Kandy.",
    icon: "consultation",
    link: "/contact",
    features: ["Investment Advice", "Legal Guidance", "Market Analysis"]
  }
];
---

<section class="py-20 bg-gradient-to-b from-navy-dark via-navy to-navy-dark">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-5 py-2 bg-gold/10 border border-gold/30 text-gold rounded-full text-sm font-semibold mb-4">
        Our Services
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Comprehensive Real Estate Solutions
      </h2>
      <p class="text-xl text-cream/80 max-w-3xl mx-auto">
        From land acquisition to construction completion, we provide end-to-end services for all your property needs.
      </p>
    </div>
    
    <!-- Services Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service) => (
        <a 
          href={service.link}
          class="group relative bg-navy-light/50 backdrop-blur-sm p-8 rounded-2xl border-2 border-gold/20 hover:border-gold transition-all duration-500 hover:shadow-xl hover:shadow-gold/20 transform hover:-translate-y-2"
        >
          <div class="relative z-10">
            <!-- Icon -->
            <div class="mb-6">
              <div class="w-16 h-16 bg-gold/10 group-hover:bg-gold rounded-xl flex items-center justify-center transition-all duration-300">
                {service.icon === 'land' && (
                  <svg class="w-8 h-8 text-gold group-hover:text-navy-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
                  </svg>
                )}
                {service.icon === 'construction' && (
                  <svg class="w-8 h-8 text-gold group-hover:text-navy-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  </svg>
                )}
                {service.icon === 'survey' && (
                  <svg class="w-8 h-8 text-gold group-hover:text-navy-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"/>
                  </svg>
                )}
                {service.icon === 'drafting' && (
                  <svg class="w-8 h-8 text-gold group-hover:text-navy-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"/>
                  </svg>
                )}
                {service.icon === 'bank' && (
                  <svg class="w-8 h-8 text-gold group-hover:text-navy-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                )}
                {service.icon === 'consultation' && (
                  <svg class="w-8 h-8 text-gold group-hover:text-navy-dark transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                )}
              </div>
            </div>
            
            <!-- Content -->
            <h3 class="text-2xl font-bold text-white mb-3 group-hover:text-gold transition-colors duration-300">
              {service.title}
            </h3>
            
            <p class="text-cream/70 mb-6 leading-relaxed">
              {service.description}
            </p>
            
            <!-- Features -->
            <ul class="space-y-2 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-center text-sm text-cream/60">
                  <svg class="w-4 h-4 text-gold mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            
            <!-- Learn More Link -->
            <div class="flex items-center text-gold group-hover:translate-x-2 transition-transform duration-300">
              <span class="font-semibold">Learn More</span>
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
    
    <!-- Bottom CTA -->
    <div class="mt-16 text-center">
      <p class="text-cream/70 mb-6">
        Need a customized solution? Let's discuss your requirements.
      </p>
      <a 
        href="/contact"
        class="inline-flex items-center px-8 py-4 bg-gold hover:bg-gold-light text-navy-dark font-bold rounded-xl shadow-lg shadow-gold/30 hover:shadow-gold/50 transform hover:scale-105 transition-all duration-300"
      >
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
        Get in Touch
      </a>
    </div>
  </div>
</section>
